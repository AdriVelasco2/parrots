---
import Layout from "../layouts/Layout.astro";
import Hero from "../components/Hero.astro";
import Quienes from "../components/Quienes.astro";
import Navbar from "../components/DashboardUI/NavbarNueva.astro";
import Repertorio from "../components/Repertorio.astro";
import Clientes from "../components/Clientes.html";
import Contacto from "../components/Contacto.astro";
import Footer from "../components/Footer.astro";
---

<meta charset="UTF-8" />
<Layout>
  <Navbar />
  <Hero />
  <Quienes />
  <Repertorio />
  <Clientes />
  <Contacto />
  <Footer />
</Layout>

<style>
  main {
    margin: auto;
    padding: 1rem;
    width: 800px;
    max-width: calc(100% - 2rem);
    color: white;
    font-size: 20px;
    line-height: 1.6;
  }

  h1 {
    font-size: 4rem;
    font-weight: 700;
    line-height: 1;
    text-align: center;
    margin-bottom: 1em;
  }
</style>

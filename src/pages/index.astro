---
import Layout from "../layouts/Layout.astro";
import Hero from "../components/Hero.astro";
import Quienes from "../components/Quienes.astro";
import Navbar from "../components/Navbar.astro";
import Repertorio from "../components/Repertorio.astro";
import Clientes from "../components/Clientes.html";
import Contacto from "../components/Contacto.astro";
import Footer from "../components/Footer.astro";
---

<Layout title="Parrots Club">
  <Navbar />
  <div class="relative bg-zinc-950">
    <div class="sticky top-0 h-screen flex flex-col">
      <div class=""><Hero /></div>
    </div>
    <div
      class="sticky top-0 h-screen flex flex-col border-t-2 border-yellow-700 bg-zinc-950 text-white"
    >
      <div class="mt-2"><Quienes /></div>
    </div>
    <div
      class="sticky top-0 h-screen flex flex-col border-t-2 border-yellow-700 bg-zinc-950 text-white"
    >
      <p class="mt-2"><Repertorio /></p>
    </div>
    <div
      class="sticky top-0 h-screen flex flex-col border-t-2 border-yellow-700 bg-zinc-950 text-white"
    >
      <p class="mt-2"><Clientes /></p>
    </div>
    <div
      class="sticky top-0 h-screen flex flex-col border-t-2 border-yellow-700 bg-zinc-950 text-white"
    >
      <p class="mt-2"><Contacto /></p>
    </div>
  </div>
  <Footer />
</Layout>

<style>
  main {
    margin: auto;
    padding: 1rem;
    width: 800px;
    max-width: calc(100% - 2rem);
    color: white;
    font-size: 20px;
    line-height: 1.6;
  }
   
  h1 {
    font-size: 4rem;
    font-weight: 700;
    line-height: 1;
    text-align: center;
    margin-bottom: 1em;
  }
  
   
  
  
</style>
